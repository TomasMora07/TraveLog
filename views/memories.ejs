    <!-- ðŸ”¹ MODAL PARA VER IMÃGENES EN GRANDE -->
    <div id="imageModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="modalImg">
        <span class="prev">&#10094;</span>
        <span class="next">&#10095;</span>
    </div>

